# CRITICAL: Replace with real PostgreSQL connection - SSL MANDATORY
DATABASE_URL=postgresql://username:password@localhost:5432/quankey_prod?sslmode=verify-full

# CRITICAL: Generate new Ed25519 keypair for production
JWT_PUBLIC_KEY=REPLACE_WITH_ED25519_PUBLIC_KEY
JWT_PRIVATE_KEY=REPLACE_WITH_ED25519_PRIVATE_KEY

# CRITICAL: Generate 64-character hex key
DB_ENCRYPTION_KEY=REPLACE_WITH_64_CHAR_HEX_KEY

# Server configuration
PORT=5000
NODE_ENV=production

# CORS configuration
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Redis for rate limiting
REDIS_URL=redis://localhost:6379

# Security settings
BCRYPT_ROUNDS=12
SESSION_SECRET=REPLACE_WITH_RANDOM_STRING

# Quantum settings
QUANTUM_ENTROPY_SOURCES=3
MIN_ENTROPY_BITS=256

# Audit settings
AUDIT_RETENTION_DAYS=90
ENABLE_AUDIT_LOGS=true

# Production flags
DISABLE_INTROSPECTION=true
DISABLE_PLAYGROUND=true
TRUST_PROXY=true