{
  "name": "quankey-backend",
  "version": "1.0.0",
  "description": "Quankey Quantum Password Manager Backend",
  "main": "dist/server.js",
  "scripts": {
    "start:prod": "npx prisma migrate deploy && node dist/server.js",
    "start": "ts-node src/server.ts",
    "build": "prisma generate && tsc -p tsconfig.prod.json",
    "postinstall": "prisma generate",
    "dev": "nodemon src/server.ts",
    "clean": "rmdir /s /q dist && echo 'Cleaned dist directory'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && start coverage/lcov-report/index.html",
    "test:security": "jest --testPathPattern=\"(encryption|quantum|webauthn|recovery)\"",
    "test:e2e": "jest --testPathPatterns=\"e2e\" --verbose --runInBand",
    "demo:run": "npm run test:e2e",
    "demo:investor": "jest --testPathPatterns=\"investorDemo\" --verbose --runInBand",
    "typecheck": "tsc --noEmit",
    "migrate": "npx prisma migrate deploy"
  },
  "keywords": [
    "quantum",
    "password",
    "security",
    "crypto"
  ],
  "author": "Quankey Team",
  "license": "ISC",
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@noble/post-quantum": "^0.4.1",
    "@prisma/client": "^6.13.0",
    "@simplewebauthn/browser": "^13.1.2",
    "@simplewebauthn/server": "^13.1.2",
    "@simplewebauthn/types": "^12.0.0",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "@types/bcrypt": "^6.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "argon2": "^0.43.1",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "shamir": "^0.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/cors": "^2.8.19",
    "@types/csv-parse": "^1.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "node-gyp": "^11.3.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.13.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0"
  }
}
