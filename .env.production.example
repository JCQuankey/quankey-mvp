# üîê QUANKEY PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env.production and fill in your secure values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=quankey_production
POSTGRES_USER=quankey_admin
POSTGRES_PASSWORD=YOUR_ULTRA_SECURE_DB_PASSWORD_HERE_64_CHARS_MIN

# Database encryption key (64 hex characters)
DB_ENCRYPTION_KEY=YOUR_256_BIT_HEX_KEY_FOR_FIELD_ENCRYPTION_64_CHARS_REQUIRED

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_32_CHARS_MIN_RECOMMENDED

# ===========================================
# JWT AUTHENTICATION (Ed25519 Keys)
# ===========================================
# Generate with: openssl genpkey -algorithm Ed25519 -out private.pem
# Extract public: openssl pkey -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_ED25519_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----"

JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_ED25519_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=https://quankey.xyz,https://www.quankey.xyz,https://app.quankey.xyz

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_EMAIL=admin@quankey.xyz
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD_STRONG_32_CHARS_MIN

# ===========================================
# QUANTUM ENTROPY SOURCES
# ===========================================
# ANU Quantum Random Number Generator
ANU_QRNG_ENABLED=true
ANU_QRNG_API_URL=https://qrng.anu.edu.au/API/jsonI.php

# IBM Quantum Network (Optional - requires IBM Quantum credentials)
IBM_QUANTUM_ENABLED=false
IBM_QUANTUM_TOKEN=YOUR_IBM_QUANTUM_TOKEN_IF_AVAILABLE
IBM_QUANTUM_HUB=ibm-q
IBM_QUANTUM_GROUP=open
IBM_QUANTUM_PROJECT=main

# Cloudflare drand
DRAND_ENABLED=true
DRAND_API_URL=https://drand.cloudflare.com/public/latest

# Hardware entropy sources
HARDWARE_RNG_ENABLED=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Session configuration
SESSION_SECRET=YOUR_SESSION_SECRET_64_CHARS_MINIMUM_FOR_SECURITY
SESSION_MAX_AGE=3600000

# Security headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
SSL_CERT_PATH=/etc/ssl/certs/quankey.crt
SSL_KEY_PATH=/etc/ssl/private/quankey.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090

# ===========================================
# STORAGE PATHS
# ===========================================
DATA_PATH=/var/lib/quankey/data
LOGS_PATH=/var/log/quankey
REPORTS_PATH=/var/lib/quankey/reports
BACKUP_PATH=/var/backups/quankey

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY_64_CHARS

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@quankey.xyz
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM=Quankey Security <noreply@quankey.xyz>

# Webhook for security alerts
SECURITY_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================================
# DEVELOPMENT OVERRIDES (DO NOT USE IN PRODUCTION)
# ===========================================
# These should NEVER be enabled in production
DEBUG=false
DEVELOPMENT_MODE=false
SKIP_SECURITY_CHECKS=false
ALLOW_HTTP=false
DISABLE_RATE_LIMITING=false

# ===========================================
# SECURITY CHECKLIST
# ===========================================
# [ ] All passwords are strong (32+ characters)
# [ ] Database encryption key is properly generated
# [ ] Ed25519 keys are properly generated
# [ ] SSL certificates are valid and installed
# [ ] CORS origins are correctly configured
# [ ] No development flags are enabled
# [ ] All sensitive values are properly secured
# [ ] Backup encryption is configured
# [ ] Monitoring and alerting are set up